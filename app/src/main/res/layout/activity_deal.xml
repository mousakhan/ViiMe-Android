<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

 <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vl.viime.DealActivity"
    android:background="#444A59">

 <View
     android:id="@+id/venue_description_background"
     android:layout_width="0dp"
     android:layout_height="300dp"
     android:layout_marginTop="16dp"
     android:background="@drawable/rectangle"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginLeft="16dp"
     android:layout_marginRight="16dp"
     android:layout_marginStart="16dp"
     android:layout_marginEnd="16dp">

 </View>

 <View
     android:layout_width="0dp"
     android:layout_height="1dp"
     app:layout_constraintTop_toBottomOf="@+id/about_this_venue_text"
     app:layout_constraintLeft_toLeftOf="@+id/venue_description_background"
     app:layout_constraintRight_toRightOf="@+id/venue_description_background"
     android:layout_marginLeft="30dp"
     android:layout_marginRight="30dp"
     android:layout_marginTop="5dp"
     android:background="@color/white"
     android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp" />

 <View
     android:layout_width="1dp"
     android:layout_height="0dp"
     app:layout_constraintTop_toTopOf="@+id/address_icon"
     app:layout_constraintBottom_toBottomOf="@+id/address_icon"
     app:layout_constraintLeft_toLeftOf="@+id/website_icon"
     app:layout_constraintRight_toRightOf="@+id/address_icon"
     android:background="#444A59"
     android:id="@+id/view" />



 <View
     android:layout_width="1dp"
     android:layout_height="0dp"
     app:layout_constraintTop_toTopOf="@+id/address_icon"
     app:layout_constraintBottom_toBottomOf="@+id/address_icon"
     app:layout_constraintLeft_toLeftOf="@+id/phone_icon"
     app:layout_constraintRight_toRightOf="@+id/website_icon"
     android:background="#444A59"
     />

 <TextView
     android:id="@+id/about_this_venue_text"
     android:layout_marginTop="5dp"
     android:textColor="@color/white"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="About This Venue"
     app:layout_constraintLeft_toLeftOf="@+id/venue_description_background"
     app:layout_constraintTop_toTopOf="@+id/venue_description_background"
     android:layout_marginLeft="30dp"
     android:layout_marginStart="30dp" />

 <ImageView
     android:id="@+id/venue_logo"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:layout_marginTop="15dp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/about_this_venue_text"
     app:srcCompat="@color/cardview_light_background" />

 <TextView
     android:id="@+id/venue_description"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="15dp"
     android:text="TextView"
     android:textColor="@color/white"
     android:textSize="10sp"
     android:padding="10dp"
     android:textAlignment="center"
     app:layout_constraintLeft_toLeftOf="@+id/venue_description_background"
     app:layout_constraintRight_toRightOf="@+id/venue_description_background"
     app:layout_constraintTop_toBottomOf="@+id/venue_logo"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="8dp" />

 <ImageView
     android:id="@+id/address_icon"
     android:layout_width="82dp"
     android:layout_height="30dp"
     app:srcCompat="@drawable/address"
     app:layout_constraintRight_toLeftOf="@+id/venue_description_background"
     app:layout_constraintLeft_toRightOf="@+id/venue_description_background"
     app:layout_constraintHorizontal_bias="0.735"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/venue_description"
     android:tint="@color/white"/>

 <ImageView
     android:id="@+id/website_icon"
     android:layout_width="83dp"
     android:layout_height="30dp"
     app:srcCompat="@drawable/website"
     app:layout_constraintRight_toLeftOf="@+id/phone_icon"
     app:layout_constraintLeft_toRightOf="@+id/address_icon"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/venue_description"
     android:tint="@color/white"/>

 <ImageView
     android:id="@+id/phone_icon"
     android:layout_width="83dp"
     android:layout_height="30dp"
     app:srcCompat="@drawable/phone"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/venue_description"
     android:tint="@color/white"
     app:layout_constraintRight_toRightOf="@+id/phone_text"
     app:layout_constraintLeft_toLeftOf="@+id/phone_text" />

 <TextView
     android:id="@+id/address_text"
     android:layout_width="77dp"
     android:layout_height="wrap_content"
     android:text="TextView"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/address_icon"
     android:textColor="@color/white"
     android:textAlignment="center"
     android:textSize="8sp"
     android:paddingBottom="5dp"
     app:layout_constraintLeft_toLeftOf="@+id/address_icon"
     app:layout_constraintRight_toRightOf="@+id/address_icon"
     app:layout_constraintHorizontal_bias="0.6" />

 <TextView
     android:id="@+id/website_text"
     android:layout_width="77dp"
     android:layout_height="wrap_content"
     android:text="TextView"
     android:layout_marginTop="8dp"
     app:layout_constraintTop_toBottomOf="@+id/website_icon"
     android:textColor="@color/white"
     android:textAlignment="center"
     android:textSize="8sp"
     android:paddingBottom="5dp"
     app:layout_constraintBottom_toBottomOf="@+id/venue_description_background"
     android:layout_marginBottom="8dp"
     app:layout_constraintVertical_bias="0.0"
     app:layout_constraintRight_toRightOf="@+id/website_icon"
     app:layout_constraintLeft_toLeftOf="@+id/website_icon" />

 <TextView
     android:id="@+id/phone_text"
     android:layout_width="78dp"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginTop="8dp"
     android:textColor="@color/white"
     android:textAlignment="center"
     app:layout_constraintLeft_toRightOf="@+id/website_text"
     app:layout_constraintRight_toRightOf="@+id/venue_description_background"
     app:layout_constraintTop_toBottomOf="@+id/phone_icon"
     android:textSize="8sp"
     android:paddingBottom="5dp"
     app:layout_constraintBottom_toBottomOf="@+id/venue_description_background"
     android:layout_marginBottom="8dp"
     app:layout_constraintVertical_bias="0.0"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="8dp" />

 <TextView
     android:id="@+id/number_of_deals"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginLeft="16dp"
     android:layout_marginRight="16dp"
     android:layout_marginTop="21dp"
     android:paddingLeft="15dp"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"

     android:textColor="@color/white"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/venue_description_background"
     android:background="@drawable/rectangle"
     android:layout_marginStart="16dp"
     android:layout_marginEnd="16dp" />

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@drawable/rectangle"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/number_of_deals"
      android:id="@+id/deals_list"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:divider="@drawable/divider"
      android:dividerPadding="10dp"
      android:showDividers="middle">
  </LinearLayout>


</android.support.constraint.ConstraintLayout>
</ScrollView>
